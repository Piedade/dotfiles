[user]
    name = Piedade
    email = pedro.piedade@red-agency.pt
[pull]
    ff = only
    rebase = true
[merge]
    ff = only
    tool = code
    conflictstyle = zdiff3
[rebase]
    autosquash = true
[push]
    default = current
[init]
    defaultBranch = main
[commit]
    template = ~/.gitmessage
    verbose = true
[core]
    excludesfile = ~/.gitignore
    # autocrlf = input
    pager = delta
[diff]
    colorMoved = default # zebra
    algorithm = histogram
[transfer]
    fsckobjects = true
[fetch]
    # prune = true
    fsckobjects = true
[receive]
    fsckObjects = true
